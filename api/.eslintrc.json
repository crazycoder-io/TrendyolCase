{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:node/recommended",
        "plugin:security/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "node/exports-style": ["error", "module.exports"],
        "quotes": ["error", "double"],
        "semi": [2, "always"]
    }
}
